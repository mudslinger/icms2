

<div id="indexSlider">
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
<% start_flag = 1 %>
<% each_headline( "slider", 3)do |entry| %>	

    <div class="item <% if start_flag ==1 then start_flag = 0 %>active<% end %>">
      <img src="<%=entry.cf.image1%>" class="topimg" width="100%"  alt="<%=entry.title%>" />
      <div class="carousel-caption">
		<h1 class="text-center"><%=entry.cf.title1%></h1>
		<p class="<%=entry.cf.NO1%> text-center"><%=entry.cf.text1%><br /><a class="btn btn-primary btn-lg" role="button" href="<%=entry.cf.link1%>">続きを見る</a></p>
      </div>
    </div>
<%end%>	
  </div>

</div>
</div>

